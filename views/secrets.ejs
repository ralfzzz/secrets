<%- include('partials/header') %>

<div class="jumbotron text-center">
  <div class="container">
    <i class="fas fa-key fa-6x"></i>
    <h1 class="display-3">You've Discovered My Secret!</h1>
    <p class="display-3">
      Hello, <%= user.name || user.username || user.displayName || user.email%>
    </p>
    <hr />
    <form action="/submit" method="post">
      <input type="text" name="secrets" required />
      <input
        type="hidden"
        name="writers"
        value="<%= user.name || user.username || user.email || user.displayName%>"
      />
      <button class="btn btn-dark btn-lg" type="submit">Submit a Secret</button>
    </form>
    <hr />
    <p class="secret-text">Jack Bauer is my hero.</p>
    <% secrets.forEach(secret => { %>
    <p class="secret-text"><%= secret.secrets; %></p>
    <% });%>
    <hr />
    <form action="/logout" method="post">
      <button type="submit" class="btn btn-light btn-lg">Log Out</button>
    </form>
    <hr />
  </div>
</div>

<%- include('partials/footer') %>
